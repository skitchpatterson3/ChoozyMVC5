@model Choozy.Data.Models.Person

<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <div class="media">
            <div class="media-body">
                <h2 class="media-heading">@Model.Name</h2>
                <h4>Age: @Model.Age</h4>
                @if (Model.IsExcluded)
                {
                    <h5 class="text-center container-fluid"><span class="label label-default">Excluded</span></h5>
                }
            </div>
            <div class="media-right">
                <a href="@Url.Action("Details", "Persons", new { id = Model.Id })">
                    <img class="media-object img-rounded" style="max-width: none;" src="@Url.Content("~/Content/Images/" + Model.AvatarFilename)" alt="User avatar" width="100" height="100" />
                </a>
            </div>
            <hr style="margin: 5px 0px;" />
            @Html.ActionLink("Edit", "Edit", "Persons", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", "Persons", new { id = Model.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", "Persons", new { id = Model.Id }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>



